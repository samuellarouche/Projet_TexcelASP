@model  TexcelASP.Models.Employe

@{
    ViewBag.Title = "Connexion";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Authentification", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Connectez-vous avec vos identifiants Texcel.</h4>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(m => m.matricule, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.matricule, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.matricule, "", new { @class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.mdp, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.mdp, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.mdp, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Connexion" class="whiteBtn btn btn-default" />
                    </div> 
                    @if(ViewBag.erreurLogin == true)
                    {
                        <p style="color:red" class="col-md-offset-2 col-md-10" > Matricule ou Mot de passe incorrecte. </p>
                    }
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}